<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Arr01HolaMundo"
        tools:targetApi="31">
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Arr01HolaMundo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Traditional Layouts -->
        <activity
            android:name=".src.LinearLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".src.LinearLayoutComposeActivity"
            android:exported="false" />
        <activity
            android:name=".src.RelativeLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".src.RelativeLayoutComposeActivity"
            android:exported="false" />
        <activity
            android:name=".src.TableLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".src.TableLayoutComposeActivity"
            android:exported="false" />
        <activity
            android:name=".src.FrameLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".src.FrameLayoutComposeActivity"
            android:exported="false" />
        <activity
            android:name=".src.AbsoluteLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".src.AbsoluteLayoutComposeActivity"
            android:exported="false" />
        <activity
            android:name=".src.ScrollViewLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".src.ScrollViewLayoutComposeActivity"
            android:exported="false" />
    </application>
</manifest>